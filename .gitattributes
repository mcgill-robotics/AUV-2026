# Enforce Unix line endings everywhere
* text=auto eol=lf

# Explicitly cover common ROS / dev files
*.cpp       text eol=lf
*.hpp       text eol=lf
*.h         text eol=lf
*.c         text eol=lf
*.py        text eol=lf
*.sh        text eol=lf
*.yaml      text eol=lf
*.yml       text eol=lf
*.launch.py text eol=lf
*.xml       text eol=lf
*.cmake     text eol=lf
